<div class="row">
  <div class="col-md-6 offset-3">
    <h1><%= @user.username %></h1>

    <%= render 'users/nav', user: @user %>
    
  </div>
</div>

<h2>Followers</h2>

<ul class="list-group">
<% @user.followers.each do |follower| %>
  <li class="list-group-item">
    <%= follower.username %>
  </li>
<% end %>
</ul>



  
